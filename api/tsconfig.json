{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "target": "ES2022", 
    "lib": ["ES2022"], 
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "preserveSymlinks": false,
    "types": ["node", "express", "cors"],
    "esModuleInterop": true
  },
  "include": ["./**/*"]
}