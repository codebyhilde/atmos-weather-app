{
  "installCommand": "pnpm install",
  "buildCommand": "tsc -p backend/tsconfig.json && pnpm run build",
  "outputDirectory": "dist",
  "builds": [
    {
      "src": "backend/dist/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/dist/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/dist/$1"
    }
  ]
}